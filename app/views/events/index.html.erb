<p id="notice"><%= notice %></p>

<h1>Events</h1>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>

<div class="card-deck">

  <% @event_items.each do |event| %>
   <div class="card">
    <%= image_tag ("boattetons-2.jpg"),width: 300,  alt: "Profile Image", class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to event.title, event %></h5>
      <p class="card-text">January 5th | Bottega </p>

    </div>
  </div>
<% end %>


